---
import Base from "../../layouts/Base.astro";
import type { Project } from "./types.d";

const projects: Project[] = [
  {
    title: "Project One",
    year: 2023,
    description:
      "Lorem ipsum dolor sit amet, consectetur adipisicing elit. Laboriosam veritatis dolorem rem praesentium dicta labore, at laudantium quisquam.",
    url: "https://example.com/",
    tech: ["TypeScript", "React", "NestJS", "TailwindCSS", "Vercel", "Drizzle", "SQLite"],
  },
];

const title = "Projects";
const description = "My Projects";
---

<Base title={title} description={description}>
  <section>
    <h1 class="mb-8 text-2xl font-medium tracking-tight">Projects</h1>
    <div class="space-y-6">
      {
        projects.map((project, index) => (
          <a
            href={project.url}
            target="_blank"
            rel="noopener noreferrer"
            class="block group hover:opacity-80 transition-opacity duration-200">
            <div class="flex flex-col">
              <div class="w-full flex justify-between items-baseline">
                <span class="text-black dark:text-white font-medium tracking-tight">
                  {project.title}
                </span>
                <span class="text-neutral-600 dark:text-neutral-400 tabular-nums text-sm">
                  {project.year}
                </span>
              </div>
              <p class="prose prose-neutral dark:prose-invert pt-3">
                {project.description}
              </p>
              <div class="flex flex-wrap mt-3">
                {
                  project.tech.map((tech) => (
                    <span class="text-neutral-600 dark:text-neutral-400 text-sm mr-2 hover:text-black dark:hover:text-white transition-colors duration-200">
                      {tech}
                    </span>
                  ))
                }
              </div>
            </div>
          </a>
        ))
      }
    </div>
  </section>
</Base>
